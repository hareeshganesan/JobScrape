<script language="JavaScript" type="text/javascript">
function submitWebSearch() {
	var val = document.forms._webSearch.qualifier.value;
	val = val.trim();
	if (val == "search the web") document.forms._webSearch.qualifier.value = '';
	if (val == '' || val == "search the web") alert("Your Search box is empty.  Please enter one or more search words.");
	else document.forms._webSearch.submit();
}
</script>

